{
  "manifest_version": 2,

  "name": "uploadly",
  "description": "Allows you to upload images to imgur!",
  "version": "1.0",

  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "https://api.imgur.com/"
  ],

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "background": {
    "scripts": ["lib/app.js"]
  }
}
