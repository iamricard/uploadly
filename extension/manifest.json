{
  "manifest_version": 2,

  "name": "uploadly",
  "description": "Allows you to upload images to imgur!",
  "version": "1.0.4",

  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "storage",
    "activeTab",
    "https://api.imgur.com/",
    "http://i.imgur.com/"
  ],

  "browser_action": {
    "default_icon": "icons/128.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "background": {
    "scripts": ["dist/background-bundle.js"]
  }
}
